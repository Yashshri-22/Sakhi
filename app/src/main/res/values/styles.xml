<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="FeelingChip">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#5E2B97</item>
        <item name="android:background">@drawable/feeling_chip_bg</item>
    </style>

    <style name="DayHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pink_dark</item>
    </style>


    <style name="PrimaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/pink_dark</item>
        <item name="android:background">@drawable/btn_login_outline</item>
        <item name="backgroundTint">@null</item>
        <item name="elevation">6dp</item>
    </style>

    <style name="ProfileInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/edit_text_rounded</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MenuDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/pink_primary</item>
    </style>

    <style name="GradientButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_gradient_signup</item>
        <item name="backgroundTint">@null</item>
        <item name="elevation">6dp</item>
    </style>


</resources>
