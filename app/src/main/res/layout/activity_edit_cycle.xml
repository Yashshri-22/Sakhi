<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/nav_bg"
        android:paddingHorizontal="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_back"
                app:tint="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Edit Cycle"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Content -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Last Period Date -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Period Date"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/pink_dark"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/pink_dark"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_calender"
            app:endIconTint="@color/pink_dark"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLastPeriod"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:focusable="false"
                android:clickable="true"
                android:textColor="#000000"
                android:textCursorDrawable="@drawable/cursor_pink"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Cycle Length -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cycle Length (days)"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/pink_dark"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/pink_dark"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCycleLength"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="number"
                android:textColor="#000000"
                android:textCursorDrawable="@drawable/cursor_pink"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Period Length -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Period Duration (days)"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/pink_dark"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/pink_dark"
            android:layout_marginBottom="28dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPeriodLength"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="number"
                android:textColor="#000000"
                android:textCursorDrawable="@drawable/cursor_pink"
                android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Save"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_gradient_signup"
            app:backgroundTint="@null"/>
    </LinearLayout>

</LinearLayout>
