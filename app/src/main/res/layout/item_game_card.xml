<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="14dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">

        <!-- Icon -->
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_myth"
            android:contentDescription="Myth or Fact"/>

        <!-- Text Content -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Myth or Fact?"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/purple_primary"/>

            <TextView
                android:id="@+id/tvMythFactPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+10 wellness points ðŸŒ¸"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/pink_dark"/>
        </LinearLayout>

        <!-- CTA -->
        <Button
            android:id="@+id/btnPlayMythFact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textColor="@color/pink_dark"
            android:background="@drawable/btn_login_outline"
            app:backgroundTint="@null"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
