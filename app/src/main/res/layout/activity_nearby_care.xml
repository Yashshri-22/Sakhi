<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- ðŸ”¹ FIXED TOOLBAR -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/chatToolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/nav_bg"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_back"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Nearby Care"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- ðŸ” SEARCH BAR (FIXED) -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/btn_login_outline"
        android:backgroundTint="@color/white"
        android:hint="Search for clinics, specialists..."
        android:textColor="@color/black"
        android:textColorHint="#757575"
        android:paddingStart="25dp"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawableTint="#C83F8D"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toBottomOf="@id/chatToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ”¹ FILTER CHIPS (FIXED) -->
    <HorizontalScrollView
        android:id="@+id/chipScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="16dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/etSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chipAll"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="All"
                android:textColor="@color/black"
                android:background="@drawable/bg_chip_inactive"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/chipGynac"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Gynecologist"
                android:textColor="@color/black"
                android:background="@drawable/bg_chip_inactive"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/chipGeneral"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="General"
                android:textColor="@color/black"
                android:background="@drawable/bg_chip_inactive"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/chip247"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="24/7"
                android:textColor="@color/black"
                android:background="@drawable/bg_chip_inactive"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- ðŸ—º MAP CARD (FIXED) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mapCard"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/chipScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/map_image"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="View on Map"
                android:background="@drawable/btn_login_outline"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:textColor="@color/black"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- ðŸ¥ ONLY THIS SCROLLS -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHospitals"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/mapCard"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ”¹ FIXED BOTTOM NAV -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/item_bottom_nav"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
